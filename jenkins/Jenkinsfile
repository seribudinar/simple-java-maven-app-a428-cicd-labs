node {
    stage('Build') {
        docker.image('maven:3.9.0').inside('-v /root/.m2:/root/.m2') {
            sh 'mvn -B -DskipTests clean package'
        }
    }
    stage('Test') {
        sh 'mvn test'
        post {
            always {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }
}
